<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/mapp" />

    <TextView
        android:id="@+id/txt_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="200dp"
        android:text="Hospital"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="134dp"
        android:layout_marginTop="510dp"
        android:text="Fire Fight"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="355dp"
        android:text="Police"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_gotoGGMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="625dp"
        android:text="Open your Google Maps!"
        android:gravity="center"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded"
        app:itemIconTint="@drawable/selector"

        app:menu="@menu/menu_navigate" />
</RelativeLayout>